<BackLabel>:
    canvas.before: 
        Color: 
            rgba: (0.3, 0.3, 1, 1)
        Rectangle:
            pos: self.pos
            size: self.size


<LineLabel>:
    canvas.before: 
        Color: 
            rgba: (0.2, 0.2, 0.2, 1)
        Line:
            points: (self.pos[0] + self.width/2, self.pos[1], self.pos[0] + self.width/2, self.height + self.pos[1])
            width: 3